---
import Date from "./Date.astro";
import Tag from "./Tags.astro";
import Unsplash from "./Unsplash.astro";

const { title, date, tags, heroImage, unsplash, unsplashURL } = Astro.props;
---

<article>
  <header>
    {heroImage && <img class="rounded-md" src={heroImage.replace("jpg", "webp")} alt={title} />}
    <div id="main-content" class="flex flex-col items-center mb-10">
      <h1 class="font-bold text-4xl mb-5 mt-5" set:html={title}></h1>
      <Date {date} />
      <Tag {tags} />
    </div>
  </header>
  <main class="prose max-w-none">
    <slot />
  </main>
  {unsplash && <Unsplash name={unsplash} url={unsplashURL} />}
</article>
