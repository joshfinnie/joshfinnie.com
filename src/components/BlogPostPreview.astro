---
import { parseISO, format } from "date-fns";

const { post } = Astro.props;
const date = parseISO(post.date);
const formattedDate = format(date, "LLLL d, yyyy");
---

<article class="my-5">
  <header>
    <p>
      <i class="fas fa-calendar-alt mr-2"></i>{formattedDate}
    </p>
    <a href={post.url} title={post.title} alt={post.title}>
      <h1 class="font-bold text-3xl mb-5" set:html={post.title}></h1>
    </a>
  </header>
  <main>
    <a href={post.url} title={post.title} alt={post.title}>
      <img src={post.heroImage} alt={post.title} class="rounded-md" />
    </a>
  </main>
</article>
