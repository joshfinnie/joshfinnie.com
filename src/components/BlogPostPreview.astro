---
import { parseISO, format } from "date-fns";

const { post } = Astro.props;
const date = parseISO(post.frontmatter.date);
const formattedDate = format(date, "LLLL d, yyyy");
---

<article class="my-5">
  <header>
    <p>
      <i class="fas fa-calendar-alt mr-2"></i>{formattedDate}
    </p>
    <a href={post.url} title={post.frontmatter.title} alt={post.frontmatter.title}>
      <h1 class="font-bold text-3xl mb-5" set:html={post.frontmatter.title}></h1>
    </a>
  </header>
  <main>
    {post.frontmatter.heroImage ?
     <>
       <a href={post.url} title={post.frontmatter.title} alt={post.frontmatter.title}>
         <img src={post.frontmatter.heroImage.replace("jpg", "webp")} alt={post.frontmatter.title} class="rounded-md" />
       </a>
     </> :
     <>
     </>}
  </main>
</article>
