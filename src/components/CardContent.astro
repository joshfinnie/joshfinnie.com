---
import type { HTMLAttributes } from 'astro/types';
import { CardContent as StarwindCardContent } from './starwind/card';

type Props = HTMLAttributes<'div'>;

const { class: className, ...rest } = Astro.props;
---

<StarwindCardContent
  class:list={[
    "px-6 pt-0",
    className,
  ]}
  {...rest}
>
  <slot />
</StarwindCardContent>
