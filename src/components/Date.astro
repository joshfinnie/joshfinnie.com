---
import { parseISO, format } from "date-fns";

import MCCalendar from "@icons/mc_calendar_line.svg";

const { date } = Astro.props;
const formattedDate = format(parseISO(date), "LLLL d, yyyy");
---

<span class="flex items-center gap-1 prose prose-zinc dark:prose-invert">
  <MCCalendar style="display:inline-block" />
  {formattedDate}
</span>
