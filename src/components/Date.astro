---
import { parseISO, format } from "date-fns";
import { Icon } from 'astro-icon/components'

const { date, showIcon = true } = Astro.props;
const formattedDate = format(parseISO(date), "LLLL d, yyyy");
---
<span class="flex items-center gap-1 dark:text-white">
    {showIcon ? <Icon name="calendar" size={20} style="display:inline-block" /> : ""}
    {formattedDate}
</span>
