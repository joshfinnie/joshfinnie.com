---
import { Button } from './starwind/button';

const { page } = Astro.props;
---

<nav class="grid grid-cols-3 items-center pt-8" aria-label="Pagination">
  <div class="justify-self-start">
    {
      page.url.prev && (
        <Button href={page.url.prev} variant="outline" size="sm">
          &larr; Prev
        </Button>
      )
    }
  </div>
  <span class="justify-self-center text-sm text-zinc-500 dark:text-zinc-400">
    Page {page.currentPage} of {page.lastPage}
  </span>
  <div class="justify-self-end">
    {
      page.url.next && (
        <Button href={page.url.next} variant="outline" size="sm">
          Next &rarr;
        </Button>
      )
    }
  </div>
</nav>
