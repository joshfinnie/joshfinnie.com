---
import MastodonIcon from "./icons/Mastodon.astro";
import GithubIcon from "./icons/Github.astro";
import LinkedInIcon from "./icons/LinkedIn.astro";
import InstagramIcon from "./icons/Instagram.astro";
import TwitchIcon from "./icons/Twitch.astro";
---

<div class="flex items-center gap-3">
  <a href="https://fosstodon.org/@joshfinnie" target="_blank" rel="me noopener noreferrer">
    <MastodonIcon size="40px"/>
    <span class="visuallyhidden">Mastodon Link</span>
  </a>
  <a href="https://github.com/joshfinnie" target="_blank" rel="noopener noreferrer">
    <GithubIcon size="40px"/>
    <span class="visuallyhidden">Github Link</span>
  </a>
  <a href="https://linkedin.com/in/joshfinnie" target="_blank" rel="noopener noreferrer">
    <LinkedInIcon size="40px"/>
    <span class="visuallyhidden">Linkedin Link</span>
  </a>
  <a href="https://instagram.com/joshfinnie" target="_blank" rel="noopener noreferrer">
    <InstagramIcon size="40px"/>
    <span class="visuallyhidden">Instagram Link</span>
  </a>
  <a href="https://twitch.tv/joshfinnie" target="_blank" rel="noopener noreferrer">
    <TwitchIcon size="40px"/>
    <span class="visuallyhidden">Twitch Link</span>
  </a>
</div>

<style>
  .visuallyhidden {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    overflow: hidden;
    clip: rect(0 0 0 0);
    border: 0;
  }
</style>
