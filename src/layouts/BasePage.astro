---
import { Markdown } from 'astro/components';

import Layout from '../components/Layout.astro';

const { content } = Astro.props;
const { title, description, permalink } = content;
---
<Layout title={`${title} | www.joshfinnie.com`} description={description} permalink={permalink}>
  <article>
    <h1 class="font-bold text-3xl mb-10 mt-5">{ title }</h1>
    <main class="prose max-w-none">
      <slot />
    </main>
  </article>
</Layout>
