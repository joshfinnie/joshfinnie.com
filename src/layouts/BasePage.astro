---
import BaseLayout from "@layouts/BaseLayout.astro";

const { content } = Astro.props;
const { title, description, permalink } = content;
---

<BaseLayout title={`${title} | www.joshfinnie.com`} {description} {permalink}>
  <article id="main-content">
    <h1 class="font-bold text-3xl mb-10 mt-5 dark:text-white">{title}</h1>
    <main class="prose max-w-none dark:prose-invert">
      <slot />
    </main>
  </article>
</BaseLayout>
