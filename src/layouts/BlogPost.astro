---
import { Markdown } from "astro/components";

import BlogPost from "../components/BlogPost.astro";
import BaseLayout from "./BaseLayout.astro";

const { content } = Astro.props;
const { title, description, date, tags, heroImage, alt, permalink, unsplash, unsplashURL } = content;
---

<BaseLayout title={`${title} | www.joshfinnie.com`} {description} {permalink} image={heroImage}>
  <BlogPost {title} {heroImage} {date} {alt} {tags} {unsplash} {unsplashURL}>
    <slot />
  </BlogPost>
</BaseLayout>
