---
import BaseLayout from "@src/layouts/BaseLayout.astro";
import BoltIcon from "@components/icons/Bolt.astro";
import Talk from "@components/Talk.astro";

import data from "@data/talks.json";
---

<BaseLayout title="Talks | www.joshfinnie.com">
  <article id="main-content">
    <h1 class="font-bold text-3xl mb-10 mt-5">Talks</h1>
    <p class="mb-5 text-base">
      (<BoltIcon size="16px" />
      denotes Lightning Talks)
    </p>
    {data.talks.map((t) => <Talk talk={t} />)}
  </article>
</BaseLayout>
